package ro.dcmt.data.connection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import ro.dcmt.utils.Configuration;

public class DBConnection {
	static Connection conn = null;
	   Logger logger = LoggerFactory.getLogger(DBConnection.class);
	    logger.info("Hello World");

	public Connection getConnection() {
		try {
			Class.forName("com.mysql.jdbc.Driver");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			l.severe(e.getMessage());
		}
		try {

			if (conn == null) {

				conn = DriverManager
						.getConnection("jdbc:mysql://rocademy.net:3306/BaniiMei?" + "user=root&password=baniimeidev");

				l.info("Created new DB Connection");
			}
			if (conn.isClosed()) {

				conn = DriverManager
						.getConnection("jdbc:mysql://rocademy.net:3306/BaniiMei?" + "user=root&password=baniimeidev");

			}

		} catch (SQLException ex) {
			// handle any errors
			System.out.println("SQLException: " + ex.getMessage());
			System.out.println("SQLState: " + ex.getSQLState());
			System.out.println("VendorError: " + ex.getErrorCode());
			l.severe("Error while creating Database Connection");

		}
		return conn;
	}
}
