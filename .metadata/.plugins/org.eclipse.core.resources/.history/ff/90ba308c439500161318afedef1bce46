							<%
								}

									for (i = ((cPge * iTotSrhRcrds) - (iTotSrhRcrds - 1)); i <= (cPge * iTotSrhRcrds); i++) {
										if (i == ((iPagNo / iSwRws) + 1)) {
							%>
