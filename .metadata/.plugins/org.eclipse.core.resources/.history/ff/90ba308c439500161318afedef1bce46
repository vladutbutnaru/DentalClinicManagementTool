										if (iTotRslts < (iPagNo + iSwRws)) {
											iEnRsNo = iTotRslts;
										} else {
											iEnRsNo = (iPagNo + iSwRws);
										}

										iStRsNo = (iPagNo + 1);
										iTotPags = ((int) (Math.ceil((double) iTotRslts / iSwRws)));
